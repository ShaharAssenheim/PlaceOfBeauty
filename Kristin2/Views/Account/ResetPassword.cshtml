
@model Kristin2.Models.ResetPasswordModel

@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-5 m-auto">
    <div class="col-md-12 mt-5">
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal mt-5 ">
                <h4 class="text-center">איפוס סיסמא</h4>
                <hr />
                <div class="text-secondary mb-3 float-right">
                    @ViewBag.Message
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group m-auto">
                    @*@Html.LabelFor(model => model.NewPassword, htmlAttributes: new { @class = "control-label col-md-2 form-inline" })*@
                    <div class="col-md-10 mw-100">
                        @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" ,placeholder = "סיסמא חדשה" } })
                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @*@Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-2 form-inline" })*@
                    <div class="col-md-10 mw-100">
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "אשר סיסמא" } })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.HiddenFor(a => a.ResetCode)
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 mw-100">
                        <input type="submit" value="שמור" class="btn btn-lg btn-secondary btn-block" />
                    </div>
                </div>
            </div>
        }

        </div>
    </div>
        @section Scripts{
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        }
